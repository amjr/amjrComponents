{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir":"./dist",
    "moduleResolution": "node",
    "declaration":true,
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "exclude": ["node_modules"]
}
